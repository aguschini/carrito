datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

enum Categoria {
  ELECTRONICA
  ROPA
  ALIMENTOS
  HOGAR
  OTROS
}

model Producto {
  id          Int       @id @default(autoincrement())
  codigo      String    @unique
  nombre      String
  descripcion String
  precio      Float
  stock       Int
  categoria   Categoria
  imagenUrl   String?
  createdAt   DateTime  @default(now())
}
